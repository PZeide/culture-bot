{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@modules/*": ["modules/*"],
    },
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
  }